<section id="catalog">
    <h1>All posts</h1>
    <div class="band">
        {{#if posts}}
        {{#each posts}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{imageUrl}}" alt="image_nature_1">
                <h1 class="text-shadow">Keyword: {{keyword}}</h1>
            </div>
            <div class="back">
                <h2>{{title}}</h2>
                <p>Description: {{description}}</p>
                <a href="/catalog/details/{{_id}}" class="details">Details</a>
            </div>
        </div>
        {{/each}}
        {{else}}

        <div class="no-posts">
                        <div class="no-posts-img">

                            <img src="/static/img/animal.jpg" alt="image_nature_3">
                        </div>
                        <p class="no-offer">There are no posts yet...</p>
                    </div>
        {{/if}}
    </div>
</section>