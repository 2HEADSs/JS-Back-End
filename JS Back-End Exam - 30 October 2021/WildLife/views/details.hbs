<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Title: {{post.title}}</h1>
                <h3>Created by an author: {{author}}</h3>
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{post.keyword}}</p>
                    <p class="card-location">Location: {{post.location}}</p>
                    <p class="card-date">Date: {{post.date}}</p>
                </div>

                <p class="disc">{{post.description}}</p>
                {{#if user}}
                <!-- If there is no registered user, do not display buttons-->
                <div class="social-btn">
                    {{#if isOwner}}
                    <!-- Only for registered user and author of the post -->
                    <a href="/catalog/edit/{{post._id}}" class="edit-btn">Edit</a>
                    <a href="/catalog/delete/{{post._id}}" class="del-btn">Delete</a>
                    {{else}}
                    {{#if alreadyVotedUser}}
                    <!-- logged in user who has already voted-->
                    <p class="thanks-for-vote">Thanks For Voting</p>
                    {{else}}
                    <!-- logged in users, who have not yet voted-->
                    <a href="/catalog/upVote/{{post._id}}" class="vote-up">UpVote +1</a>
                    <a href="/catalog/downVote/{{post._id}}" class="vote-down">DownVote -1</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}

            </div>
        </div>
        <div class="card_right">
            <img src="{{post.imageUrl}}" alt="image">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                    <p class="PV">Total rating of votes: {{votesCount}}</p>
                </div>
                {{#if postHasVotes}}
                <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                <p class="disc">People who voted for the post - {{votedList}}</p>
                {{else}}
                <!-- If not display: -->
                <p class="disc">People who voted for the post - No one has voted yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>